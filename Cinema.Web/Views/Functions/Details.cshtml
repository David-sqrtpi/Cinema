@model Cinema.Web.Models.ViewModels.IndexFunctionViewModel

@{
    ViewData["Title"] = "Details";
}

<h1>Function details</h1>
<h4>@Model.Movie.Title (@Model.Movie.Year)</h4>
<hr />

<div class="container">
	<div class="row">
		<div class="col-auto">
			<img src="@Html.DisplayFor(model => model.Movie.PosterImage)" width="300" height="450" />
		</div>
		<div class="col">
			<dl class="row">
				<dt class="col-sm-2">
					@Html.DisplayNameFor(model => model.FunctionDate)
				</dt>
				<dd class="col-sm-10">
					@Model.FunctionDate.ToString("dddd, dd MMMM yyyy 'at' HH:MM tt")
				</dd>
				<dt class="col-sm-2">
					@Html.DisplayNameFor(model => model.Price)
				</dt>
				<dd class="col-sm-10">
					@Html.DisplayFor(model => model.Price)
				</dd>
				<dt class="col-sm-2">
					@Html.DisplayNameFor(model => model.AvailableSeats)
				</dt>
				<dd class="col-sm-10">
					@Html.DisplayFor(model => model.AvailableSeats)
				</dd>
			</dl>

			<button onclick="location.href='@Url.Action("Edit", new { Id = Model.FunctionId })'" type="button" class="btn btn-primary">Edit</button>
			<button onclick="location.href='@Url.Action("Delete", new { Id = Model.FunctionId })'" type="button" class="btn btn-danger">Delete</button>
		</div>
	</div>
</div>