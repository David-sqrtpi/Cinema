@model IEnumerable<Cinema.Web.Models.Movie>;

@{
}
<div class="container">
	<div class="row g-3">
		@foreach (var item in Model)
		{
			<div class="col-sm-3">
				<div class="card">
					<img class="card-img-top" src="@Html.DisplayFor(modelItem => item.PosterImage)" alt="Poster image">
					<div class="card-body">
						<h5 class="card-title">@Html.DisplayFor(modelItem => item.Title)</h5>
						<p class="card-text">@Html.DisplayFor(modelItem => item.Genre)</p>
						@* @Html.ActionLink("ViewFunctions", "ViewFunctions", new { MovieId = item.MovieId }) *@
						<a class="btn btn-primary" asp-action="ViewFunctions" asp-route-id="@item.MovieId">View functions</a>
					</div>
				</div>
			</div>
		}
	</div>
</div>
